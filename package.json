{
  "name": "blueth-city",
  "version": "0.1.0",
  "private": true,
  "description": "Blueth City - Clickable Map RPG Simulator MVP",
  "scripts": {
    "dev": "pnpm run --parallel --filter './apps/*' dev",
    "dev:api": "pnpm --filter @blueth/api dev",
    "dev:web": "pnpm --filter @blueth/web dev",
    "build": "pnpm run --filter './packages/*' build && pnpm run --filter './apps/*' build",
    "test": "pnpm run --recursive test",
    "test:core": "pnpm --filter @blueth/core test",
    "test:web": "pnpm --filter @blueth/web test",
    "test:e2e": "npx playwright test",
    "lint": "pnpm run --recursive lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "pnpm run --recursive typecheck",
    "db:migrate": "pnpm --filter @blueth/db migrate",
    "build:itch": "bash scripts/build-itch.sh",
    "clean": "pnpm run --recursive clean && rm -rf node_modules"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
